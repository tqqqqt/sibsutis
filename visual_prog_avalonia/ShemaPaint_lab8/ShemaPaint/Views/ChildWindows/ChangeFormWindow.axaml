<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ShemaPaint.Views.ChildWindows.ChangeFormWindow"
        Title="ChangeFormWindow">
	<StackPanel>
		<WrapPanel Margin="15,15,0,15">
			<TextBlock Text="Ширина  -  "/>
			<TextBox Text="{Binding Width}"/>
		</WrapPanel>
		<WrapPanel Margin="15,0,0,15">
			<TextBlock Text="Высота  -  "/>
			<TextBox Text="{Binding Height}"/>
		</WrapPanel>
		<WrapPanel Margin="15,0,0,15">
			<TextBlock Text="Размер текста имени элемента  -  "/>
			<TextBox Text="{Binding FontSizeFirst}"/>
		</WrapPanel>
		<!--
		<WrapPanel Margin="15,0,0,15">
			<TextBlock Text="Размер текста атрибутов  -  "/>
			<TextBox Text="{Binding FontSizeSecond}"/>
		</WrapPanel>
		<WrapPanel Margin="15,0,0,15">
			<TextBlock Text="Размер текста операций  -  "/>
			<TextBox Text="{Binding FontSizeThird}"/>
		</WrapPanel>-->
		<Button Width="150" Content="Сохранить"
				Command="{Binding ButtonSave}"
				Margin="15,0,0,0" HorizontalContentAlignment="Center"/>
	</StackPanel>
</Window>
